@using Microsoft.AspNetCore.Identity
@using XLJLeCommerce.Models
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/StyleSheets/reset.css" rel="stylesheet" />
    <link href="~/StyleSheets/StyleSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Architects+Daughter|Freckle+Face|Rock+Salt|Schoolbell" rel="stylesheet">
</head>

<body>
    <img class="topper"src="~/Assets/topper.jpg">

    <h1>Mystical Pets</h1>

    <header>
        <nav>
            <ul>
                <li><a href="/"> Home</a></li>
                @if (signInManager.IsSignedIn(User))
                {
                    <li>
                        <span>Welcome @User.Claims.First(c => c.Type == "FullName").Value</span>
                    </li>
                }
                else
                {
                    <li><a href="/Account/Login">Login</a></li>
                    <li><a href="/Account/Register">register</a></li>
                }
            </ul>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
</body>
</html>
