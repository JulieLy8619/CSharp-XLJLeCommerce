@model IEnumerable<XLJLeCommerce.Models.Product>

<h1>All Products</h1>
<div class="parent">
@foreach (var item in Model)
{
    <div class="container">
        <img src="@item.ImageURL" alt="@item.Name" />
        <p>@item.Name</p>
        <p>@item.Description</p>
        <p>@item.Price</p>
        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
    </div>

}
</div>