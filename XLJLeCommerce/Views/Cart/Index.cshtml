@model IEnumerable<XLJLeCommerce.Models.ShoppingCartItem>
@{
    Layout = "_Layout";
}

<h2>Shopping Cart</h2>
<table>
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Unit Price
            </th>

            <th>
                Ordered Quantity 
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Prod.FirstOrDefault().Name
            </td>
            <td>
                @item.Prod.FirstOrDefault().Price
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdQty)
            </td>
            <td>
                @*doesn't exist yet <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |*@
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                @*doesn't exist yet<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>